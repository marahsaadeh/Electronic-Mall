@model List<Electronic_Mall.Models.Product>

 <section id="services" class="services section-bg">
      <div class="container" data-aos="fade-up">
<div class="row gy-4">
            @foreach (var product in Model)
            {
        <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
<!-- When clicking on "المنتج عرض" directed to the product page located in
the Home file, where the ID of the current product is passed along. -->
<a href="@Url.Action("Product", "Home", new { productId = product.Productid })" class="btn btn-primary">عرض المنتج</a>
            <div class="card" style="width: 18rem; direction: rtl;">
                <img src="@product.Photo" class="card-img-top" alt="@product.Name" style="width: 100%; height: 25rem;">
                <div class="card-body" style="text-align: right;">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text">السعر: @product.Price</p>
                    <p class="card-text">متبقي منها: @product.Quantity</p>
                </div>
            </div>
        </div>
            }




        </div>

      </div>

    </section><!-- End Services Section -->

