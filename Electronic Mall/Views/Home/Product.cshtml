@model Electronic_Mall.Models.Product

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">الرئيسية</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-md-6">
           
            @if (!string.IsNullOrEmpty(Model.Photo))
            {

                <img src="../assets/img/@Model.Photo" class="img-fluid" alt="@Model.Name"  />

            }
        </div>
        <div class="col-md-6">
            <h2 style="color: #6A37E6; font-weight: bold;">@Model.Name</h2>
            <p> <strong style="color: #6A37E6;font-weight: bold;">الوصف:</strong>@Model.Description</p>
            <p>
                <strong style="color: #6A37E6;font-weight: bold;">السعر: </strong>@Model.Price.ToString("C")
            </p>
            <p>
                <strong style="color: #6A37E6;font-weight: bold;">الكمية المتاحة:</strong> @Model.Quantity
            </p>
            <a href="#" class="btn btn-primary">أضف إلى السلة</a>
        </div>
    </div>
</div>







