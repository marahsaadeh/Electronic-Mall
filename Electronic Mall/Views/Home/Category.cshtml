 @model List<Electronic_Mall.Models.Category>

 <section id="services" class="services section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>قسم المنتجات</h2>
          <p>نقدم لك تشكيلة متنوعة من المنتجات.اكتشف معنا عالم التنوع والاحترافية في مولنا، حيث نسعى دائمًا لتلبية احتياجاتك بأعلى مستويات الجودة والخدمة</p>
        </div>

        <div class="row gy-4">

            @foreach (var category in Model)
            {
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
    <a href="@Url.Action("SubCategory","Home", new { subCategoryId = category.Categoryid })" style="text-decoration: none;">
                         <div class="card" style="width: 18rem; height: 20rem;">
                 <!-- Execute the SubCategory view located in the Home folder, including the category identifier (categoryId) as a variable in the URL. -->
                       <img src="@category.Photo" class="card-img-top" alt="@category.Categoryname" style="width: 100%; height: 83%;" /> 
                        <div class="card-body">
                            <h5 class="card-title" style="text-align: center;">@category.Categoryname</h5> 
                        </div>

                    </div>
                </div>
            
    }
</div>

        </div>

      </div>

    </section><!-- End Services Section -->


