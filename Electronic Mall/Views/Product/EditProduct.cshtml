@model Electronic_Mall.ProductViewModel

<h1>تعديل المنتج</h1>
<form action="/Product/EditProduct" method="post" enctype="multipart/form-data">
    <input type="hidden" id="productId" name="id" value="@ViewData["Productid"]" />
    <input type="hidden" id="Categoryid" name="Categoryid" value="@Model.Categoryid">

    <br><br>
    <!--
    <div class="form-group">
